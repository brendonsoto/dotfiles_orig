Config { font = "-misc-fixed-*-*-*-*-13-*-*-*-*-*-*-*"
        , borderColor = "black"
        , border = TopB
        , bgColor = "black"
        , fgColor = "grey"
        , position = TopW L 100
        , commands = [ Run Battery ["-L","15","--normal","green","-l","red","-t","Batt: <left>% == TimeLeft: <timeleft>"] 60
                     , Run Com "light" [] "light" 10
                     , Run Com "pulseaudio-ctl" ["current"] "vol" 10
                     , Run Cpu ["-L","15","-H","50","--normal","green","--high","red","-w","3"] 10
                     , Run Date "%a %b %_d %Y %I:%M:%S %p" "date" 10
                     , Run Memory ["-t","Mem: <usedratio>%"] 10
                     , Run Network "wlp2s0" ["-L","0","-H","32","--normal","green","--high","red","-w","3"] 10
                     , Run StdinReader
                     , Run Swap [] 10
                     , Run ThermalZone 0 ["-t","<id>: <temp>C"] 30
                     ]
        , sepChar = "$"
        , alignSep = "}{"
        , template = "$StdinReader$ } $cpu$ | $memory$ * $swap$ | $thermal0$ | $wlp2s0$ { Brightness: $light$% | Vol: $vol$ | $battery$ | <fc=#ee9a00>$date$</fc>"
        }
