Config { font = "-misc-fixed-*-*-*-*-13-*-*-*-*-*-*-*"
        , borderColor = "black"
        , border = TopB
        , bgColor = "black"
        , fgColor = "grey"
        , position = TopW L 100
        , commands = [ Run Battery ["-L","15","--normal","green","-l","red","-t","Batt: <watts>W : <left>% : <timeleft>"] 10
                     -- , Run Brightness ["-t", "Brightness: <percent>%"] 60
                     -- , Run Brightness [ "-t", "<ipat>" , "--" , "--brightness-icon-pattern", "<icon=bright_%%.xpm/>" ] 30
                     , Run Cpu ["-L","15","-H","50","--normal","green","--high","red","-w","3"] 10
                     -- , Run CpuFreq [] 10
                     , Run Date "%a %b %_d %Y %I:%M:%S %p" "date" 10
                     , Run Locks
                     , Run Memory ["-t","Mem: <usedratio>%"] 10
                     , Run Network "wlp4s0" ["-L","0","-H","32","--normal","green","--high","red","-w","3"] 10
                     , Run StdinReader
                     , Run Swap [] 10
                     -- , Run ThermalZone 0 [] 10
                     ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = "%StdinReader% } %cpu% | %memory% * %swap% | %wlp4s0% | %locks% { %battery% | <fc=#ee9a00>%date%</fc>"
        }
